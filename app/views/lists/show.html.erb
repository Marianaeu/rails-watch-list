<div class="banner banner_show">
  <h1>Save any kind of movies</h1>
</div>
<h1>Lists#show</h1>
<p>Find me in app/views/lists/show.html.erb</p>
<h2><%= @list.name %>
<%= link_to "Add bookmark",new_list_bookmarks_path(@list) %>
<%= link_to "Back to movies", lists_path %>
<ul class="list-group">
  <% @list.bookmarks.each do |bookmark| %>
    <li class="list-group-item">
    <%= bookmark.comment %>
    <br><%= bookmark.movie.title %>
    <br><%= bookmark.movie.rating %>
    <br><%= bookmark.movie.overview %>
    <br><img src="<%= bookmark.movie.poster_url %>"></li></li>
  <% end %>
</ul>
